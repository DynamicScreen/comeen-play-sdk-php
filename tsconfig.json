{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types",
            "resources/js/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "~/*": ["./"],
            "ziggy": ["vendor/tightenco/ziggy/dist/vue"],
        }
    },
    "exclude": [
        "node_modules",
        "storage/apps/"
    ]
}
